#!/usr/bin/env bash

# The command's name
echo -e 'pwd'

# the command's description
echo "The pwd command returns the full pathname of your current location in the filesystem or working directory. Your working directory is the location from which your commands are being executed."

echo "------------"

# the command's syntax
echo "Syntax:"
echo "test argument1 argument2"
echo -e "\targument1: description of argument 1"
echo -e "\targument2: description of argument 2"
#   ...      etc

echo "------------"

# the command's usage examples
# example 1
echo "pwd"
echo "Outputs the absolute pathname of the current working directory."

# example 2
echo "pwd -P"
echo "Outputs the absolute pathname of the current working directory while resolving any symbolic links involved."


exit 0
