#!/usr/bin/env bash

# The command's name
echo -e 'rmdir'

# the command's description
echo "description here"

echo "------------"

# the command's syntax
echo "Syntax:"
echo "git test argument1 argument2"
echo -e "\targument1: description of argument 1"
echo -e "\targument2: description of argument 2"
#   ...      etc

echo "------------"

# the command's usage examples
# example 1
echo "rmdir dir1 dir2"
echo "Will remove all specified empty directorys. This command will not delete directories that have files inside of them."

# example 2
echo "mdir -p dir3/dir4/dir5"
echo "This will remove the selected directory and all subsequent parent directories if they become empty upon the removal of the child directory."

exit 0
