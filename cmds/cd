#!/usr/bin/env bash

# The command's name
echo -e 'cd'

# the command's description
echo "The cd command changes your present location in the filesystem or working directory to the specified destination, either an absolute or relative file path."

echo "------------"

# the command's syntax
echo "Syntax:"
echo "test argument1 argument2"
echo -e "\targument1: description of argument 1"
echo -e "\targument2: description of argument 2"
#   ...      etc

echo "------------"

# the command's usage examples
# example 1
echo "cd /path/to/directory"
echo "Changes the current working directory to the directory specified."

# example 2
echo "cd -P /path/to/directory"
echo "Changes the current working directory to the directory specified while resolving any symbolic links involved."


exit 0
