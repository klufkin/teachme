#!/usr/bin/env bash

# The command's name
echo -e 'git merge'

# the command's description
echo "description here"

echo "------------"

# the command's syntax
echo "Syntax:"
echo
echo "git merge branch_name"
echo -e "\tbranch_name: The specified branch to merge into the current branch."
echo
echo "git merge --no-edit branch_name"
echo -e "\t--no-edit: Use git merge with the auto-generated merge commit message."
echo -e "\tbranch_name: The specified branch to merge into the current branch."
echo
echo "git merge -e branch_name"
echo -e "\t-e: Enable git merge to open an editor before committing to edit the auto-generated merge commit message."
echo -e "\tbranch_name: The specified branch to merge into the current branch."
echo
echo "git merge --no-commit branch_name"
echo -e "\t--no-commit: Enable git merge to merge only and not make a new commit automatically."
echo -e "\tbranch_name: The specified branch to merge into the current branch."

echo "------------"

# the command's usage examples
# example 1
echo "git test"
echo description here

# example 2
echo "git test something"
echo description here


