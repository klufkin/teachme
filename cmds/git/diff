#!/usr/bin/env bash

# The command's name
echo -e 'git diff'

# the command's description
echo "The command git diff lets you compare different versions of your files. It is most commonly used to see what changes you made since your last commit. You can also compare files between two different commits. Every commit in Git has a commit id, which you can get when you use the command 'git log'. You can use these ids to compare the differences bewteen the current state of the repository as well as other commits."

echo "------------"

# the command's syntax
echo "Syntax:"
echo
echo "git diff"
echo
echo "git diff --stat"
echo -e "\t--stat: Enable git diff to show only the stats of the file changes since the last commit."
echo
echo "git diff new-feature master"
echo -e "\tnew-feature: The name of the branch to be compared to the master branch."
echo -e "\tmaster: The name of the branch to be compared to the new-feature branch."
echo
echo "git diff <commit-id-1> <commit-id-2>"
echo -e "diff: Enable git diff to show the difference between the two commits."
echo -e "\t<commit-id>: the id for the specified commit, can be found using git log."

echo
echo "git diff upstream/master"
echo -e "\tupstream/master: The name of the branch to be compared to the current branch."

echo "------------"

# the command's usage examples
# example 1
echo "git test"
echo description here

# example 2
echo "git test something"
echo description here


exit 0
