#!/usr/bin/env bash

# The command's name
echo -e 'echo'

# the command's description
echo "Echo is used to repeat entered type (arguments) back to the screen(standar output). It is a command typically used in shell scripts and bash files to output status text to the screen or a file."

echo "------------"

# the command's syntax
echo "Syntax:"
echo
echo "echo -e \"string\""
echo -e "\t-e: Enabling echo to interpret backslash as escaped characters."
echo -e "\t\"string\": The string where echo outputs."
echo
echo "echo -n \"string\""
echo -e "\t-n: Disable echo from echoing trailing new line."
echo -e "\t\"string\": The string where echo outputs."

echo "------------"

# the command's usage examples
# example 1
echo "test"
echo description here

# example 2
echo "test something"
echo description here


exit 0


